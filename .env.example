# Configuration du serveur MCP GROWCRM
# Copiez ce fichier vers .env et configurez vos valeurs

# URL de base de votre installation GROWCRM
GROWCRM_BASE_URL=https://app.ty-dev.fr

# Token d'authentification API (à générer dans GROWCRM)
# Vous pouvez utiliser un token Sanctum Laravel
GROWCRM_API_TOKEN=your-api-token-here

# Email et mot de passe pour l'authentification (alternative au token)
GROWCRM_EMAIL=amine.benammar17@gmail.com
GROWCRM_PASSWORD=Aminetwiti@17

# Mode d'authentification: "token" ou "credentials"
AUTH_MODE=credentials

# Port du serveur (optionnel, par défaut stdio)
SERVER_PORT=3200

# Mode debug
DEBUG=false
