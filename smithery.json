{
  "name": "growcrm-mcp-server",
  "displayName": "GROWCRM MCP Server",
  "version": "1.0.3",
  "description": "Complete MCP server for GROWCRM - Manage clients, projects, tasks, invoices, leads, tickets, estimates, expenses, and contracts through AI assistants",
  "author": {
    "name": "GROWCRM Team",
    "url": "https://app.ty-dev.fr"
  },
  "license": "MIT",
  "homepage": "https://github.com/Aminetwiti/mcpgrowcrm",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aminetwiti/mcpgrowcrm.git"
  },
  "categories": [
    "CRM",
    "Business",
    "Productivity"
  ],
  "tags": [
    "crm",
    "growcrm",
    "project-management",
    "invoicing",
    "lead-management",
    "ticket-system",
    "business-automation",
    "ai-integration"
  ],
  "mcp": {
    "version": "2024-11-05",
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": false
    },
    "toolCount": 35
  },
  "installation": {
    "npm": {
      "package": "@growcrm/mcp-server",
      "command": "npx -y @growcrm/mcp-server"
    },
    "docker": {
      "image": "growcrm/mcp-server",
      "tag": "latest"
    }
  },
  "configuration": {
    "required": [
      "GROWCRM_API_URL",
      "GROWCRM_API_TOKEN"
    ],
    "schema": {
      "GROWCRM_API_URL": {
        "type": "string",
        "description": "URL de base de l'API GROWCRM (ex: https://app.ty-dev.fr/api/v1)",
        "default": ""
      },
      "GROWCRM_API_TOKEN": {
        "type": "string",
        "description": "Token d'authentification Sanctum Bearer",
        "secret": true,
        "default": ""
      }
    }
  },
  "tools": [
    {
      "name": "list_clients",
      "description": "Liste tous les clients avec pagination et filtres"
    },
    {
      "name": "get_client",
      "description": "Récupère les détails d'un client spécifique"
    },
    {
      "name": "create_client",
      "description": "Crée un nouveau client"
    },
    {
      "name": "update_client",
      "description": "Met à jour les informations d'un client"
    },
    {
      "name": "delete_client",
      "description": "Supprime un client"
    },
    {
      "name": "list_projects",
      "description": "Liste tous les projets avec filtres"
    },
    {
      "name": "get_project",
      "description": "Récupère les détails d'un projet"
    },
    {
      "name": "create_project",
      "description": "Crée un nouveau projet"
    },
    {
      "name": "update_project",
      "description": "Met à jour un projet"
    },
    {
      "name": "delete_project",
      "description": "Supprime un projet"
    },
    {
      "name": "list_tasks",
      "description": "Liste toutes les tâches"
    },
    {
      "name": "get_task",
      "description": "Récupère les détails d'une tâche"
    },
    {
      "name": "create_task",
      "description": "Crée une nouvelle tâche"
    },
    {
      "name": "update_task",
      "description": "Met à jour une tâche"
    },
    {
      "name": "delete_task",
      "description": "Supprime une tâche"
    },
    {
      "name": "list_invoices",
      "description": "Liste toutes les factures"
    },
    {
      "name": "get_invoice",
      "description": "Récupère les détails d'une facture"
    },
    {
      "name": "create_invoice",
      "description": "Crée une nouvelle facture"
    },
    {
      "name": "update_invoice_status",
      "description": "Met à jour le statut d'une facture"
    },
    {
      "name": "list_leads",
      "description": "Liste tous les leads"
    },
    {
      "name": "get_lead",
      "description": "Récupère les détails d'un lead"
    },
    {
      "name": "create_lead",
      "description": "Crée un nouveau lead"
    },
    {
      "name": "convert_lead_to_client",
      "description": "Convertit un lead en client"
    },
    {
      "name": "list_tickets",
      "description": "Liste tous les tickets de support"
    },
    {
      "name": "get_ticket",
      "description": "Récupère les détails d'un ticket"
    },
    {
      "name": "create_ticket",
      "description": "Crée un nouveau ticket"
    },
    {
      "name": "update_ticket_status",
      "description": "Met à jour le statut d'un ticket"
    },
    {
      "name": "list_estimates",
      "description": "Liste tous les devis"
